<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="bottom"
        sothree:umanoDragView="@id/ll_bottom_include"
        sothree:umanoOverlay="false"
        sothree:umanoPanelHeight="0dp"
        sothree:umanoShadowHeight="0dp">

        <include
            android:id="@+id/include_charge"
            layout="@layout/layout_charge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size_05"
            android:layout_marginTop="@dimen/size_15"
            android:layout_marginEnd="@dimen/size_05"
            android:layout_marginBottom="@dimen/size_05"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_bottom_include"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:fitsSystemWindows="true"
            android:orientation="horizontal">

            <include
                android:id="@+id/include_payment"
                layout="@layout/payment_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_05"
                android:layout_marginTop="@dimen/size_15"
                android:layout_marginEnd="@dimen/size_05"
                android:layout_marginBottom="@dimen/size_05"
                android:visibility="gone" />

            <include
                android:id="@+id/include_customer"
                layout="@layout/layout_customer_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
        </LinearLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</RelativeLayout>