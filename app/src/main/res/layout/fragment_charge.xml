<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_charge_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_50"
        android:background="@drawable/button_border_gray"
        android:paddingStart="@dimen/size_50"
        android:paddingTop="@dimen/size_25"
        android:paddingEnd="@dimen/size_50"
        android:paddingBottom="@dimen/size_25"
        android:text="@string/Charge"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_size_18"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_charge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_50"
        android:background="@null"
        android:focusable="true"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:text="0.00"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_size_54"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_charge_text" />

    <TextView
        android:id="@+id/et_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="@dimen/size_05"
        android:background="@null"
        android:text="@string/symbol"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/text_size_24"
        app:layout_constraintRight_toLeftOf="@+id/et_charge"
        app:layout_constraintTop_toBottomOf="@+id/tv_charge_text" />

    <TextView
        android:id="@+id/tv_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_77"
        android:gravity="center"
        android:text="@string/Proceed"
        android:visibility="gone"
        style="@style/ButtonBlue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_charge" />

    <include android:id="@+id/include_payment"
        layout="@layout/payment_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_charge"
        android:layout_marginTop="@dimen/size_15"
        android:layout_marginStart="@dimen/size_05"
        android:layout_marginEnd="@dimen/size_05"
        android:layout_marginBottom="@dimen/size_05"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>