<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <include
        android:id="@+id/include_app_bar_profile"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_app_bar_profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_10"
            android:orientation="vertical">

            <TextView
                style="@style/TextMoreDetailsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_05"
                android:text="@string/user_Information" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_shape"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/size_15"
                    android:paddingBottom="@dimen/size_15">

                    <TextView
                        style="@style/textRegularMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        style="@style/textRegularMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/border_shape"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/size_15"
                    android:paddingBottom="@dimen/size_15">

                    <TextView
                        style="@style/textRegularMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/role_name"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/tv_role"
                        style="@style/textRegularMore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:background="@drawable/border_shape"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/size_15"
                    android:paddingBottom="@dimen/size_15">

                    <TextView
                        style="@style/textRegularMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/first_name_profile"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/tv_first_name"
                        style="@style/textRegularMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_shape"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/size_15"
                    android:paddingBottom="@dimen/size_15">

                    <TextView
                        style="@style/textRegularMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_name_profile"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/tv_last_name"
                        style="@style/textRegularMore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/TextMoreDetailsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_15"
                android:text="@string/contact_information" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="05dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_shape"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/size_15"
                    android:paddingBottom="@dimen/size_15">

                    <TextView
                        style="@style/textRegularMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/tv_email"
                        style="@style/textRegularMore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_15"
                android:layout_marginBottom="@dimen/size_15"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_shape"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/size_15"
                    android:paddingBottom="@dimen/size_15">

                    <TextView
                        style="@style/textRegularMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/tv_phone"
                        style="@style/textRegularMore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>