<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_swipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_gray"
        android:padding="@dimen/size_10"
        android:src="@drawable/ic_card_swipe"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_card_swipe"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_05"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="@string/card_insert_tap_swipe"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintLeft_toRightOf="@+id/img_swipe"
        app:layout_constraintRight_toLeftOf="@+id/img_swipe_arrow"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_swipe_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_10"
        android:src="@drawable/ic_swipe_arrow"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_connect_swipe"
        style="@style/ButtonBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_05"
        android:paddingStart="@dimen/size_25"
        android:paddingEnd="@dimen/size_25"
        android:text="@string/btn_connect"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_swipe" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_swipe_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_05"
        android:paddingStart="@dimen/size_25"
        android:paddingEnd="@dimen/size_25"
        android:textColor="@color/blue"
        android:textSize="@dimen/text_size_18"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_swipe" />

    <LinearLayout
        android:id="@+id/layout_anim"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="@dimen/size_20"
        android:background="@drawable/rounded_rectangle"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_swipe">

        <View
            android:id="@+id/view_prograce"
            android:layout_width="40dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="#0000FF"
            android:visibility="visible" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>